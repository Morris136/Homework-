import os
import google.generativeai as genai
from google.generativeai.types import GenerationConfig

# âœ… æ›¿æ›æˆä½ è‡ªå·±çš„ API é‡‘é‘°
GOOGLE_API_KEY = "ä½ çš„_API_é‡‘é‘°"
genai.configure(api_key=GOOGLE_API_KEY)

# âœ… å®šç¾©å‡½å¼ï¼Œæ”¯æ´ temperature èˆ‡ max_tokens
def generate_answer(prompt, temperature=0.7, max_tokens=256):
    model = genai.GenerativeModel('gemini-pro')

    config = GenerationConfig(
        temperature=temperature,
        max_output_tokens=max_tokens
    )

    response = model.generate_content(
        prompt,
        generation_config=config
    )

    return response.text

# âœ… æ¸¬è©¦è¼¸å…¥
if __name__ == "__main__":
    prompt = "Explain how photosynthesis works in simple terms."
    answer = generate_answer(prompt, temperature=0.5, max_tokens=100)
    print("ğŸ”¹ Model Answer:\n", answer)
